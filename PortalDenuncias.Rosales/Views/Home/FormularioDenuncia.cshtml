@model PortalDenuncias.Rosales.Models.DenunciaViewModel
@{
    ViewData["Title"] = "Formulario de Denuncia";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
    }

    .card {
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .card-header h1 {
        font-size: 1.8rem;
        margin-bottom: 0;
    }

    .form-section-divider {
        border-top: 2px solid #e9ecef;
        margin: 2.5rem 0;
    }

    .persona-block {
        border: 1px solid #dee2e6;
        border-radius: .375rem;
        padding: 1rem 1rem 0.5rem 1rem;
        position: relative;
    }

    .text-danger {
        font-size: 0.875em;
    }

    #loader-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        display: none;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        z-index: 9999;
    }

        #loader-overlay .spinner-border {
            width: 4rem;
            height: 4rem;
        }
</style>

<div class="card">
    <div class="card">
        <div class="card-header bg-primary text-center">
            <h1 class="text-white">Formulario de Denuncia</h1>
        </div>
        <div class="card-body p-4 p-md-5">

            <div class="alert alert-warning d-flex align-items-center mb-5" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                <div>
                    <strong>Atención:</strong> La información que entregues debe ser verídica y de buena fe. Tu denuncia será investigada de forma confidencial bajo la <strong>Ley N° 21.595</strong>. El mal uso de este canal puede tener consecuencias.
                </div>
            </div>

            <form asp-controller="Home" asp-action="Crear" method="post" id="denuncia-form" enctype="multipart/form-data">
                <div id="loader-overlay">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3 text-white fs-5">Enviando denuncia, por favor espere...</p>
                </div>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                
                <h4 class="mb-3 text-primary">1. Modalidad de la Denuncia</h4>
                <div class="mb-4 p-3 border rounded bg-light">
                    <p class="fw-bold mb-2">¿Cómo deseas realizar tu denuncia?</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="TipoIdentificacion" id="tipoAnonima" value="anonima" checked>
                        <label class="form-check-label" for="tipoAnonima">
                            <strong>Anónima:</strong> No se registrarán tus datos personales.
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="TipoIdentificacion" id="tipoIdentificada" value="identificada">
                        <label class="form-check-label" for="tipoIdentificada">
                            <strong>Identificada:</strong> Proporcionarás tus datos para que podamos contactarte si es necesario.
                        </label>
                    </div>
                </div>
                
                <div id="datosDenuncianteContainer" class="d-none">
                    <div class="p-3 border rounded bg-light-subtle mb-4">
                        <h5 class="text-primary mb-3">Tus Datos de Contacto</h5>
                        <div class="mb-3">
                            <label asp-for="DenuncianteNombre" class="form-label fw-bold"></label>
                            <input asp-for="DenuncianteNombre" class="form-control" />
                            <span asp-validation-for="DenuncianteNombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DenuncianteEmail" class="form-label fw-bold"></label>
                            <input asp-for="DenuncianteEmail" class="form-control" type="email"/>
                            <span asp-validation-for="DenuncianteEmail" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DenuncianteTelefono" class="form-label fw-bold"></label>
                            <input asp-for="DenuncianteTelefono" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DenuncianteRelacion" class="form-label fw-bold"></label>
                            <select asp-for="DenuncianteRelacion" class="form-select">
                                <option selected disabled value="">Seleccione una opción...</option>
                                <option value="Colaborador">Colaborador</option>
                                <option value="Proveedor">Proveedor</option>
                                <option value="Cliente">Cliente</option>
                                <option value="Tercero">Tercero (Otro)</option>
                            </select>
                            <span asp-validation-for="DenuncianteRelacion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr class="form-section-divider">

                <h4 class="mb-3 text-primary">2. Sobre el Hecho Denunciado</h4>

                <div class="mb-4">
                    <label asp-for="TipoDelito" class="form-label fw-bold"></label>
                    <select asp-for="TipoDelito" class="form-select">
                        <option selected disabled value="">Seleccione una opción...</option>
                        <option value="soborno">Soborno o Cohecho</option>
                        <option value="lavado_activos">Lavado de Activos</option>
                        <option value="administracion_desleal">Administración Desleal</option>
                        <option value="colusion">Colusión</option>
                        <option value="negociacion_incompatible">Negociación Incompatible</option>
                        <option value="corrupcion_privados">Corrupción entre Privados</option>
                        <option value="delito_ambiental">Delito Medioambiental</option>
                        <option value="acoso_laboral">Acoso Laboral o Sexual</option>
                        <option value="conflicto_interes">Conflicto de Interés</option>
                        <option value="otro">Otro tipo de falta a la ética</option>
                    </select>
                    <span asp-validation-for="TipoDelito" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Descripcion" class="form-label fw-bold"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="6" placeholder="Sea lo más específico posible. Describa qué ocurrió, quiénes participaron, dónde, cuándo y cómo."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="FechaConocimiento" class="form-label fw-bold"></label>
                        <input asp-for="FechaConocimiento" class="form-control"/>
                        <span asp-validation-for="FechaConocimiento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="Lugar" class="form-label fw-bold"></label>
                        <input asp-for="Lugar" class="form-control" placeholder="Ej: Oficina, bodega, sucursal..."/>
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>
                </div>

                <hr class="form-section-divider">
                <h4 class="mb-3 text-primary">3. Personas Involucradas</h4>

                <div class="mb-4">
                    <label class="form-label fw-bold">¿Puede identificar a las personas involucradas?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IdentificaPersonasRadio" id="identificaSi" value="si">
                        <label class="form-check-label" for="identificaSi">Sí</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IdentificaPersonasRadio" id="identificaNo" value="no" checked>
                        <label class="form-check-label" for="identificaNo">No</label>
                    </div>
                </div>

                <div id="detallePersonasContainer" class="d-none">
                    <div id="personas-list">
                    </div>
                    <button type="button" id="add-persona-btn" class="btn btn-outline-primary mt-2"><i class="bi bi-plus-lg"></i> Añadir otra persona</button>
                </div>

                <hr class="form-section-divider">
                <h4 class="mb-3 text-primary">4. Información Adicional</h4>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="Frecuencia" class="form-label fw-bold"></label>
                        <select asp-for="Frecuencia" class="form-select">
                            <option value="unica_vez">Ocurrió una sola vez</option>
                            <option value="esporadica">Ocurre de forma esporádica</option>
                            <option value="recurrente">Ocurre de forma recurrente / continua</option>
                            <option value="no_se">No lo sé</option>
                        </select>
                        <span asp-validation-for="Frecuencia" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="SigueOcurriendo" class="form-label fw-bold"></label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="SigueOcurriendo" id="sigueSi" value="si">
                                <label class="form-check-label" for="sigueSi">Sí</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="SigueOcurriendo" id="sigueNo" value="no">
                                <label class="form-check-label" for="sigueNo">No</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="SigueOcurriendo" id="sigueNoSe" value="no_se">
                                <label class="form-check-label" for="sigueNoSe">No lo sé</label>
                            </div>
                        </div>
                        <span asp-validation-for="SigueOcurriendo" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">¿Reportó esta situación antes por otro medio?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="ReportoAntes" id="reportoSi" value="si">
                        <label class="form-check-label" for="reportoSi">Sí</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="ReportoAntes" id="reportoNo" value="no" checked>
                        <label class="form-check-label" for="reportoNo">No</label>
                    </div>
                    <span asp-validation-for="ReportoAntes" class="text-danger"></span>
                </div>

                <div class="mb-4 d-none" id="detalleReportePrevio">
                    <label asp-for="DetalleReportePrevio" class="form-label"></label>
                    <textarea asp-for="DetalleReportePrevio" class="form-control" rows="3"></textarea>
                </div>

                <hr class="form-section-divider">
                <h4 class="mb-3 text-primary">4. Evidencia</h4>

                <div class="mb-4">
                    <label asp-for="Archivos" class="form-label fw-bold"></label>
                    <input type="file" name="Archivos" id="Archivos" class="form-control" multiple>
                    <div class="form-text">Puedes seleccionar varios archivos a la vez. Límite 10MB por archivo.</div>
                </div>

                <div class="mb-4">
                    <label asp-for="DescripcionEvidencia" class="form-label"></label>
                    <textarea asp-for="DescripcionEvidencia" class="form-control" rows="3" placeholder="Ej: 'El PDF es la factura alterada', 'En el audio se escucha la conversación...'"></textarea>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-primary btn-lg">Enviar Denuncia de Forma Segura</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalIdentificacion" tabindex="-1" aria-labelledby="modalIdentificacionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalIdentificacionLabel">Consentimiento para Identificación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Al continuar, confirmas que deseas realizar esta denuncia de forma identificada.</p>
                <p>Aceptas y autorizas a la empresa <strong>Rosales</strong> a utilizar tus datos de contacto (nombre, correo electrónico y/o teléfono) con el único fin de comunicarse contigo para solicitar información adicional, aclarar detalles o informarte sobre el progreso de la investigación de tu denuncia.</p>
                <p>Tus datos serán tratados con la máxima confidencialidad y solo serán accesibles para el personal autorizado a cargo de la investigación.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnCancelarIdentificacion">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnAceptarIdentificacion">Aceptar y Continuar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" asp-append-version="true">
        document.addEventListener('DOMContentLoaded', function () {
            // Lógica para mostrar/ocultar detalle de personas
            const radioIdentifica = document.querySelectorAll('input[name="IdentificaPersonasRadio"]');
            const detallePersonasContainer = document.getElementById('detallePersonasContainer');
            radioIdentifica.forEach(radio => {
                radio.addEventListener('change', function () {
                    if (this.value === 'si') {
                        detallePersonasContainer.classList.remove('d-none');
                        if (document.getElementById('personas-list').childElementCount === 0) {
                            addPersonaBlock();
                        }
                    } else {
                        detallePersonasContainer.classList.add('d-none');
                    }
                });
            });

            // Lógica para mostrar/ocultar detalle de reporte previo
            const radioReporto = document.querySelectorAll('input[name="ReportoAntes"]');
            const detalleReportePrevio = document.getElementById('detalleReportePrevio');
            radioReporto.forEach(radio => {
                radio.addEventListener('change', function () {
                    if (this.value === 'si') {
                        detalleReportePrevio.classList.remove('d-none');
                    } else {
                        detalleReportePrevio.classList.add('d-none');
                        document.getElementById('DetalleReportePrevio').value = '';
                    }
                });
            });

            const addPersonaBtn = document.getElementById('add-persona-btn');
            const personasList = document.getElementById('personas-list');

            const addPersonaBlock = () => {
                const index = personasList.children.length;

                const newPersonaBlock = document.createElement('div');
                newPersonaBlock.classList.add('persona-block', 'mb-3');
                newPersonaBlock.innerHTML = `
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close" onclick="this.parentElement.remove()"></button>
                    <h6 class="mb-3">Persona Involucrada</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Personas_${index}__Nombre" class="form-label">Nombre:</label>
                            <input type="text" id="Personas_${index}__Nombre" name="Personas[${index}].Nombre" class="form-control" placeholder="Nombre y Apellido">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Personas_${index}__Cargo" class="form-label">Cargo:</label>
                            <input type="text" id="Personas_${index}__Cargo" name="Personas[${index}].Cargo" class="form-control" placeholder="Ej: Gerente, Supervisor, Externo">
                        </div>
                        <div class="col-12 mb-3">
                             <label for="Personas_${index}__Rol" class="form-label">Rol en los hechos:</label>
                             <input type="text" id="Personas_${index}__Rol" name="Personas[${index}].Rol" class="form-control" placeholder="¿Qué hizo esta persona?">
                        </div>
                    </div>
                `;
                personasList.appendChild(newPersonaBlock);
            };

            addPersonaBtn.addEventListener('click', addPersonaBlock);

             // --- Lógica para mostrar el loader al enviar el formulario ---
            const form = document.getElementById('denuncia-form');
            const loader = document.getElementById('loader-overlay');
            const submitButton = form.querySelector('button[type="submit"]');


            const tipoIdentificacionRadios = document.querySelectorAll('input[name="TipoIdentificacion"]');
            const datosDenuncianteContainer = document.getElementById('datosDenuncianteContainer');
            const inputsDenunciante = datosDenuncianteContainer.querySelectorAll('input');
            const radioAnonima = document.getElementById('tipoAnonima');

            // Inicializamos el Modal de Bootstrap
            const modalElement = document.getElementById('modalIdentificacion');
            const modalIdentificacion = new bootstrap.Modal(modalElement);

            const btnAceptarIdentificacion = document.getElementById('btnAceptarIdentificacion');
            const btnCancelarIdentificacion = document.getElementById('btnCancelarIdentificacion');

            tipoIdentificacionRadios.forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.value === 'identificada') {
                        modalIdentificacion.show();
                    } else {
                        ocultarCamposIdentificacion();
                    }
                });
            });

            btnAceptarIdentificacion.addEventListener('click', function() {
                // Si el usuario acepta en el modal, mostramos los campos
                mostrarCamposIdentificacion();
                modalIdentificacion.hide();
            });

            // Si el usuario cierra el modal con la 'X' o el botón cancelar
            modalElement.addEventListener('hidden.bs.modal', function () {
                // Verificamos si los campos no están visibles, en ese caso revertimos a "Anónima"
                if (datosDenuncianteContainer.classList.contains('d-none')) {
                    radioAnonima.checked = true;
                }
            });


            function mostrarCamposIdentificacion() {
                datosDenuncianteContainer.classList.remove('d-none');
                // Hacemos los campos de nombre y correo requeridos dinámicamente
                document.getElementById('DenuncianteNombre').required = true;
                document.getElementById('DenuncianteEmail').required = true;
                document.getElementById('DenuncianteRelacion').required = true;
            }

            function ocultarCamposIdentificacion() {
                datosDenuncianteContainer.classList.add('d-none');
                // Quitamos el 'required' para que el formulario se pueda enviar anónimamente
                document.getElementById('DenuncianteNombre').required = false;
                document.getElementById('DenuncianteEmail').required = false;
                document.getElementById('DenuncianteRelacion').required = false;
                 // Limpiamos los valores por si el usuario se arrepiente
                inputsDenunciante.forEach(input => input.value = '');
                document.getElementById('DenuncianteRelacion').value = '';
            }

        });

        $(function () {
            // 1. OBTENER LOS ELEMENTOS
            const form = $('#denuncia-form');
            const loader = $('#loader-overlay');
            const submitButton = form.find('button[type="submit"]');

            // 2. LÓGICA DE ENVÍO DEL FORMULARIO
            form.on('submit', function(e) {
                if (!form.valid()) {
                    return;
                }
                loader.css('display', 'flex');
                submitButton.prop('disabled', true);
                submitButton.html(`
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Enviando...
                `);
            });
        });
    </script>
}
